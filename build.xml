<?xml version="1.0" encoding="UTF-8"?>
<project name="UITravel" default="run" basedir=".">
    <description>Builds, tests, and runs the project UITravel.</description>
    
    <!-- Importing the NetBeans generated build script -->
    <import file="nbproject/build-impl.xml"/>

    <!-- Adding a custom classpath -->
    <path id="lib.classpath">
        <fileset dir="lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <!-- Adding custom compile target to use the custom classpath -->
    <target name="-pre-compile">
        <mkdir dir="build"/>
        <javac srcdir="src" destdir="build" includeantruntime="false">
            <classpath refid="lib.classpath"/>
        </javac>
    </target>

    <!-- Custom run target to use the custom classpath -->
    <target name="run" depends="compile">
        <java fork="true" classname="com.mycompany.Main">
            <classpath>
                <path refid="lib.classpath"/>
                <pathelement location="build"/>
            </classpath>
        </java>
    </target>
</project>